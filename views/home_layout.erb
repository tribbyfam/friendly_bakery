</head>

<body>
<body id="home">
  <div class="navbar-fixed">
    <nav class="teal lighten-2">
      <div class="container">
        <div class="nav-wrapper">
          <a href="#home" class="brand-logo left"> <img id="logo" src="/images/logo.png" alt="Main St logo"> </a>
          <ul class="right hide-on-small-and-down">
            <li>
              <a href="/home">Home</a>
            </li>
            <li>
              <a href="/cookies">Cookies</a>
            </li>
            <li>
              <a href="/cakes">Cakes</a>
            </li>
            <li>
              <a href="/muffins">Muffins</a>
              <%# <a class="dropdown-trigger" href="#!" data-target="my-dropdown">Menu<i class="material-icons right">arrow_drop_down</i>
              </a> %>
            </li>
            <%# <a class="button-collapse" data-activates="mobile-nav" href="#my-dropdown">
            <i class="material-icons">menu</i>
          </a> %>
          </ul>
        </div>
      </div>
    </nav>
  </div>

  <ul id="my-dropdown" class="dropdown-content">
    <li>
      <a href="/cookies">Cookies</a>
    </li>
    <li>
      <a href="/cakes">Cakes</a>
    </li>
    <li class="divider"></li>
    <li>
      <a href="/muffins">Muffins</a>
    </li>
  </ul>
  

  <!-- Slider Section-->
  <section class="slider">
    <ul class="slides">
      <li>
        <img src="/images/hero0.jpg" alt="">
        <div class="caption center-align">
          <h2 class="teal-text text-lighten-2">We offer variety of cookies</h2>
          <h5 class="light yellow-text text-lighten-4 hide-on-small-only">Since 1923 Family Owned and Operated</h5>
        </div>
      </li>
      <li>
        <img src="/images/hero5.jpeg" alt="" >
        <div class="caption left-align">
          <h2 class="teal-text text-lighten-2">We make custom cakes</h2>
          <h5 class="light yellow-text text-lighten-4 hide-on-small-only">Cakes for any occasion</h5>
        </div>
      </li>
      <li>
        <img src="/images/hero7.jpeg" alt="">
        <div class="caption right-align">
          <h2 class="teal-text text-lighten-2">Variety of Cupcakes</h2>
          <h5 class="light yellow-text text-lighten-4 hide-on-small-only">One stop for all your pastry needs</h5>
        </div>
      </li>
      <li>
        <img src="/images/hero1.jpeg" alt="">
        <div class="caption left-align">
          <h2 class="teal-text text-lighten-2">Delicious Cookies</h2>
          <h5 class="light yellow-text text-lighten-4 hide-on-small-only">Fresh cookies made daily</h5>
        </div>
      </li>
      <li>
        <img src="/images/hero2.jpg" alt="">
        <div class="caption left-align">
          <h2 class="pink-text text-lighten-4">Other pastries</h2>
          <h5 class="light yellow-text text-lighten-4 hide-on-small-only">We fill many sugar needs</h5>
        </div>
      </li>
    </ul>
  </section>

 <%= yield %>

<!-- Section Contact -->
  <section id="contact" class="section section-contact scrollspy">
    <div class="container">
      <div class="row">
        <div class="col s12 m6">
          <div class="card-panel teal grey-text text-lighten-2 center">
            <i class="material-icons medium">email</i>
            <h5>Contact Us For Our Catalog</h5>
            <p>Updated seasonally</p>
          </div>
        </div>
        <form class="col s12 m6" action="/contact" method="post">
          <div class="card-panel teal lighten-4">
            <h5>Please fill out this form</h5>
            <div class="input-field">
              <input type="text" placeholder="Name" name="name">
              <label for="name">Name</label>
            </div>
            <div class="input-field">
              <input type="text" placeholder="Email" name="email">
              <label for="email">Email</label>
            </div>
            <div class="input-field">
              <textarea class="materialize-textarea" placeholder="Enter Message" name="message"></textarea>
              <label for="message">Message</label>
            </div>
            <input type="submit" value="Submit" class="btn teal">
          </div>
        </form>
      </div>
    </div>
  </section>
  <!-- Footer -->

  <footer class="section teal lighten-2 white-text center">
    <div class="row">
      <div class="col s12 m6">
        <p class="flow-text">Address: <br>123 Main Street <br>Sayville NY 12345</p>
      </div>
      <div class="col s12 m6">
        <p class="flow-text">Hours of operation: <br>Mon - Fri : 10am - 5pm <br>Sat - Sun : 9am - 4pm</p>
      </div>
    </div>
    <p class="flow-text">Main St Bakery &copy; 2018</p>
  </footer>


  <!--Import jQuery before materialize.js-->
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script type="text/javascript" src="js/materialize.min.js"></script>
  <script src="main.js"></script>
  <script>
    M.AutoInit();
    $(document).ready(function () {
      $('.button-collapse').sideNav();

    });
    document.addEventListener('DOMContentLoaded', function () {
      var elems = document.querySelectorAll('.carousel');
      var instances = M.Carousel.init(elems, 'duration', 2000);
    });

    document.addEventListener('DOMContentLoaded', function () {
      var elems = document.querySelectorAll('.slider');
      var instances = M.Slider.init(elems, 'height: 400');
    });

    document.addEventListener('DOMContentLoaded', function () {
      var elems = document.querySelectorAll('.scrollspy');
      var instances = M.ScrollSpy.init(elems, options);
    });

    //init sidenav
    //init slider
  </script>
</body>

</html>